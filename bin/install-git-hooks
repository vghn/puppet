#!/usr/bin/env bash
# Install git hooks script

# Bash strict mode
set -euo pipefail
IFS=$'\n\t'

# DEBUG
[ -z "${DEBUG:-}" ] || set -x

# VARs
APPDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../" && pwd -P)"

# Set working directory
cd "$APPDIR" || exit

# Install git hooks
for file in "${APPDIR}"/bin/*-git-hook; do
  echo "Installing ${file}"
  ln -sfn "$file" "${APPDIR}/.git/hooks/$(basename "${file%-git-hook}")"
done
